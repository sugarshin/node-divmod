{
  "name": "divmod",
  "version": "0.0.1",
  "description": "node-divmod",
  "repository": "git@github.com:sugarshin/node-divmod.git",
  "main": "index.js",
  "files": [
    "lib",
    "index.js",
    "test",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "start": "babel src/node-divmod.js -w -o lib/node-divmod.js",
    "test": "mochify -R spec --transform babelify --transform espowerify ./test/test.js",
    "compile": "babel src/node-divmod.js -o lib/node-divmod.js",
    "build-standalone": "browserify src/node-divmod.js -t babelify -s divmod | derequire > build/node-divmod.js",
    "build-min": "uglifyjs build/node-divmod.js -m -c warnings=false --comments '/\\/*!/' -o build/node-divmod.min.js",
    "build": "npm run compile && npm run build-standalone && npm run build-min"
  },
  "engines": {
    "node": "0.10.x"
  },
  "author": "sugarshin",
  "license": "MIT",
  "devDependencies": {
    "babel": "^4.7.16",
    "babelify": "^5.0.4",
    "browserify": "^9.0.3",
    "derequire": "^2.0.0",
    "espowerify": "^0.10.0",
    "mochify": "^2.6.1",
    "phantomjs": "^1.9.16",
    "power-assert": "^0.10.2",
    "uglify-js": "^2.4.17"
  }
}
